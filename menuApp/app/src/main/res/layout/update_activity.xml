<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.ukdw.fastmenu.UpdateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/dueUpdate"
                android:layout_width="225dp"
                android:layout_height="42dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint="@string/input_harga"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toEndOf="@+id/txtDue"
                tools:layout_editor_absoluteY="398dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="98dp"
                android:layout_height="23dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:text="Deskripsi"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTitle" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="43dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                android:text="Menu"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTitle"
                android:layout_width="363dp"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:hint="Masukkan Menu"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/inputDesc"
                android:layout_width="362dp"
                android:layout_height="143dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="Masukkan deskripsi"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:padding="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtDue"
                android:layout_width="92dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:text="Harga : "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="398dp" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="48dp"
                android:text=" "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDue"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="134dp"
                android:layout_height="48dp"
                android:layout_marginStart="136dp"
                android:layout_marginTop="48dp"
                android:backgroundTint="@color/orange"
                android:text="UPDATE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtStatus"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>