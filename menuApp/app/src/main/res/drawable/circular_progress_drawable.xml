<!-- res/drawable/circular_progress_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background_circle">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="8"
            android:useLevel="false">
            <solid android:color="#CCCCCC" />
        </shape>
    </item>

    <!-- Progress Arc -->
    <item android:id="@+id/progress_arc">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="8"
                android:useLevel="true">
                <solid android:color="#CC6D00" />
            </shape>
        </rotate>
    </item>
</layer-list>